+    assert(messageReceiver != nullptr);
+    if (!messagingIsRunning) {
+        messageReceiver->startReceiveQueue();
+        messagingIsRunning = true;
+    }
+}
+
+void JoynrClusterControllerRuntime::stopMessaging()
+{
+    // joynrDispatcher->stopMessaging();
+    if (messagingIsRunning) {
